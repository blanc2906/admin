generator client {
  provider = "prisma-client-js"
  
}

generator json {
  provider  = "prisma-json-types-generator"
  namespace = "PrismaJson"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
 
}

enum EstateType {
  DEFAULT
  APARTMENT
  HOUSE
  COMMERCIAL
  SCHOOL
}

enum AdminRole {
  SUPER_ADMIN
  SUB_ADMIN
}

model Configuration{
    id Int @id @default(autoincrement())
    key String @unique
    value String
    description String?
}
model AdminAccount {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  role      AdminRole @default(SUB_ADMIN)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  active    Boolean   @default(true)
  deletedAt DateTime?
  @@index([email])
  @@index([active])
}

// for features module
model Feature {
  id         Int           @id @default(autoincrement())
  name        String       @unique
  table       String       @unique 
  version     Int           @default(1)        
  meta        Json
  description String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  @@index([table, version])
}

model Estate {
  id               Int               @id @default(autoincrement())
  name             String            @db.VarChar(255) 
  description      String?
  imageFileUrls    String[]          @default([])
  imageFileIds     String[]          @default([])
  type             EstateType
  areas            EstateArea[]
  estateMembers    EstateMember[]
  devices          Device[]      
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  deletedAt        DateTime?
  @@index([type])
}

model EstateArea {
  id            Int         @id @default(autoincrement())
  name          String      @db.VarChar(255)
  description   String?
  imageFileUrls String[]    @default([])
  imageFileIds  String[]    @default([])
  estateId      Int
  estate        Estate      @relation(fields: [estateId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  devices       Device[]    @relation("AreaDevices")
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  deletedAt     DateTime?
  @@index([estateId])
}

model EstateMember {
  role              EstateMemberRole
  estateId          Int
  userId            Int 
  nickname          String?           @db.VarChar(50)
  status            EstateMemberStatus
  globalUserId      Int?              
  fullName          String?           @db.VarChar(255)
  emailAddress      String?           @db.VarChar(255)
  phoneNumber       String?           @db.VarChar(50)
  imageUrl          String?           @db.Text
  gender           String?           @db.VarChar(20)
  dateOfBirth      DateTime?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  deletedAt         DateTime?
  estate            Estate            @relation(fields: [estateId], references: [id], onDelete: Cascade)

  @@id([estateId, userId])
  @@index([userId, estateId])
}

model Device {
  id Int @id @default(autoincrement()) 
  name String @db.VarChar(255)
  description String?
  imageFileUrls String[] @default([])
  imageFileIds String[] @default([])
  estateId Int
  estate Estate @relation(fields: [estateId], references: [id])
  area EstateArea[] @relation("AreaDevices")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
  
}

model DeviceBrand {
  id            Int         @id @default(autoincrement())
  name          String      @db.VarChar(255)
  code          String      @db.VarChar(255) @unique
  isDefault     Boolean
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  deletedAt     DateTime?

  @@index([isDefault])
  @@index([code])
}


enum EstateMemberRole {
  OWNER
  ADMIN
  MEMBER
}

enum EstateMemberStatus {
  ACTIVE
  PENDING
  BLOCKED
}